generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model HomeContent {
  id            String   @id @default(cuid())
  heroTitle     String   @default("ظلال المدينة")
  heroTitleEn   String   @default("City Shadows")
  heroSubtitle  String   @default("نصنع الفخامة والتميّز في كل تفصيلة منذ أكثر من خمسة عشر عامًا")
  heroSubtitleEn String  @default("Crafting luxury and excellence in every detail for over fifteen years")
  heroLogo      String   @default("/capture.png")
  aboutTitle    String   @default("من نحن")
  aboutTitleEn  String   @default("About Us")
  aboutP1       String   @default("شركة رائدة في التصميم المعماري والهندسة الفاخرة، نجمع بين الأصالة العربية واللمسات العصرية العالمية لنقدم مشاريع تحمل بصمة لا تُنسى.")
  aboutP1En     String   @default("A leading company in architectural design and luxury engineering, combining Arabic authenticity with modern global touches to deliver projects with an unforgettable signature.")
  aboutP2       String   @default("منذ تأسيسنا عام ٢٠٠٨ نفذنا أكثر من ٢٥٠ مشروعًا في ٤٨ دولة وحصدنا ٢٢ جائزة عالمية.")
  aboutP2En     String   @default("Since our establishment in 2008, we have completed over 250 projects in 48 countries and won 22 international awards.")
  visionTitle   String   @default("رؤيتنا · رسالتنا · قيمنا")
  visionTitleEn String   @default("Our Vision · Mission · Values")
  visionVision  String   @default("الرؤية")
  visionVisionEn String  @default("Vision")
  visionVisionText String @default("أن نكون الخيار الأول عالميًا في تقديم حلول معمارية فاخرة تحترم الهوية وتتخطى التوقعات.")
  visionVisionTextEn String @default("To be the first choice globally in providing luxury architectural solutions that respect identity and exceed expectations.")
  visionMission String   @default("الرسالة")
  visionMissionEn String @default("Mission")
  visionMissionText String @default("تصميم مساحات تعبر عن طموح أصحابها بأعلى معايير الجودة والإبداع والاستدامة.")
  visionMissionTextEn String @default("Designing spaces that express their owners' ambitions with the highest standards of quality, creativity, and sustainability.")
  visionValues  String   @default("القيم")
  visionValuesEn String  @default("Values")
  visionValuesText String @default("التميّز • الأصالة • الالتزام • الابتكار • الثقة")
  visionValuesTextEn String @default("Excellence • Authenticity • Commitment • Innovation • Trust")
  statsTitle    String   @default("إنجازاتنا بالأرقام")
  statsTitleEn  String   @default("Our Achievements in Numbers")
  statsProjects String   @default("مشروع منجز")
  statsProjectsEn String @default("Completed Projects")
  statsYears    String   @default("سنوات الخبرة")
  statsYearsEn  String   @default("Years of Experience")
  statsCountries String  @default("دولة حول العالم")
  statsCountriesEn String @default("Countries Worldwide")
  statsAwards   String   @default("جائزة عالمية")
  statsAwardsEn String   @default("International Awards")
  statsProjectsNum String @default("250+")
  statsYearsNum String   @default("15+")
  statsCountriesNum String @default("48")
  statsAwardsNum String   @default("22")
  footerCopyright String @default("© 2025 اسم الشركة – جميع الحقوق محفوظة")
  footerCopyrightEn String @default("© 2025 Company Name – All Rights Reserved")
  footerLogo     String   @default("/capture.png")
  headerLogo      String   @default("/capture.png")
  updatedAt    DateTime @updatedAt
  createdAt    DateTime @default(now())
}

